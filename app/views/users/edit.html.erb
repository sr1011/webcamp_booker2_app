
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
 
<div class="container">
 <div class="row">
<div class="mx-auto">
  <h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>Introduction</h4>
  <%= f.text_field :introduction %>
  <p><%= f.submit "Update User" %></p>
<% end %>
</div>
</div>
</div>