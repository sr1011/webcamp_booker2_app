
<% if flash[:notice] %>
  <p class="notice01"><%= flash[:notice] %></p>
<% end %>

<div class="row">
  <div class="col-5">
    <div "sidebar_fixed">
    <h3>User info</h3>
    
    <h3>New book</h3>
<%= form_with model: @booker, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :book_name %>
  <h4>Opinion</h4>
  <%= f.text_area :caption %>
  <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
  <% end %>
</div>
</div>
<div class="col">
<table class="table bookers-index">
        <h2>Books</h2>
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
          </tr>
        </thead>
        <tbody>
          <% @bookers.each do |booker| %>
            <tr>
              <td>
                <%= link_to user_path(booker.user) do %>
                  <%= attachment_image_tag booker.user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%>
                <% end %>
              </td>
              <td>
                <%= link_to booker.book_name, booker_path(booker.id) %>
              </td>
              <td>
                <%= booker.caption %>
              </td>
            </tr>
        <% end %> 
        </tbody>
      </table>
      </div>
      </div>


