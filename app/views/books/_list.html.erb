<% if flash[:notice] %>
  <p class="notice01"><%= flash[:notice] %></p>
<% end %>

<% if new_book.errors.any? %>
 <div id="error_explanation">
   <h2><%=pluralize(new_book.errors.count, "error") %> prohbited ths book from being saved:</h2>
   <ul><% new_book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
   </ul>
 </div>
 <% end %>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h3>User info</h3>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
           <th><p>name</th>
           <th><%= user.name %></p></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><p><%= user.introduction %></p></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(user),  class: "btn btn-outline-secondary btn-block col-xs-12" do %>
			  <i class="fas fa-user-cog" aria-hidden="true"></i>
			  <% end %>
      
        <h2 class="mt-3">New book</h2>
         <%= form_with model: new_book, local:true do |f| %>
         <h4>Title</h4>
         <%= f.text_field :title %>
         <h4>Opinion</h4>
         <%= f.text_area :body %>
         <div><%= f.submit 'Create Book', class:"btn btn-success" %></div>
         <% end %>
        </form>
    </div>